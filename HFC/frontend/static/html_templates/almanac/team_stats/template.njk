<div class='ext_nav_bar'>
  {% include "../../static/html_templates/common_templates/ext_nav_bar.njk" %}
</div>
<style>
  #Top25Table tr:nth-child({{TeamsInPlayoff}}) td{
    border-bottom: 2px solid black;
  }
</style>


{% include "../../static/html_templates/common_templates/ext_team_coloring.njk" %}


<body>
  <div class="PageContent">
    <div class='worldHeader w3-row background-eee'>
      {% include "../../static/html_templates/common_templates/scoreboard.njk" %}
    </div>
    <nav>
      <div class="w3-bar team-bar" id="nav-tab" style="background-color: #{{page.PrimaryColor}}; border-bottom: 3px solid #{{page.SecondaryColor}}; border-top: 3px solid #{{page.SecondaryColor}};  color: white; ">
        <button class='w3-bar-item btn tab nav-tab-button show-small'  id="nav-sidebar-tab" style="">
            <i class="fas fa-bars"></i>
        </button>
        <button class="w3-bar-item btn tab nav-tab-button selected-tab" id="nav-team-stats-tab" style="background-color: #{{page.SecondaryColor}};">Team Stats</button>
        <button class="w3-bar-item btn tab nav-tab-button" id="nav-team-ratings-tab">Team Ratings</button>
      </div>
    </nav>
    <div id="nav-tabContent">
      <div class="tab-content" style="display:block;"  id="nav-team-stats">
        <div class='w3-display-container' >
          <div class='w3-row-padding'>
            <div class='w3-col l11'>
              <div id='team-stats-table-filter'></div>
              <div id='team-stats-table-column-control'></div>
              <div id='team-stats-table-container' class=''></div>


            </div>

          </div>
        </div>
      </div>
      <div class="tab-content" style='display:none;' id='nav-team-ratings'>
          <div class='w3-display-container' >
            <div class='w3-row-padding'>
              <div class='w3-col l11'>
                <div class="card w3-margin-bottom">
                  <table class="table table-striped table-hover center-text" id='team-ratings'  style="width:100%;">
                    <thead>
                      <tr class='center-text-row'>
                        <th colspan='4' class='col-group'>TEAM</th>
                        <th colspan='3' class='col-group'>GROUP</th>
                        <th colspan='8'>UNITS</th>
                        <th colspan='8'>SCHOOL</th>
                      </tr>
                      <tr class='center-text-row'>
                        <th></th>
                        <th>Team</th>
                        <th >Conference</th>
                        <th  class='col-group'>Rank</th>

                        <th>OVR</th>
                        <th>OFF</th>
                        <th class='col-group'>DEF</th>

                        <th>QB</th>
                        <th>RB</th>
                        <th>WR/TE</th>
                        <th>OL</th>
                        <th>DL</th>
                        <th>LB</th>
                        <th>DB</th>
                        <th>ST</th>

                        <th>Brand</th>
                        <th>Facilities</th>
                        <th>Location</th>
                        <th>Pro Pipeline</th>
                        <th>History</th>
                        <th>Fan Support</th>
                        <th>Success</th>
                        <th>Academics</th>


                      </tr>
                    </thead>

                  </table>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</body>
