<style>
  .default-coloring {
    background-color: #1763B2;
    color: white;
  }
</style>

<div class="w3-row-padding ">
  <div class=" w3-col s10 w3-padding">
    <div class="card">
      <table class='table table-striped table-hover width100'>
        <thead>
          <tr class='default-coloring center-text-row' style='border-top: 4px solid #333333;'>
            <th class='left-text'>Dynasty Name</th>
            <th colspan='1'>Team</th>
            <th></th>
            <th>Year</th>
            <th>Date started</th>
            <th>Date last played</th>
            <th>Play!</th>
            <th>Export</th>
          </tr>
        </thead>
        <tbody>
          {% for World in world_list %}
          <tr class='center-text-row'>
            <td class='left-text'>{{World.database_name}}</td>
            <td>
              <img src="{{World.user_team.team_logo_url}}" alt="" style='width: 50px;'>
            </td>
            <td class='left-text'>
              <div class="">
                <div class=" font14">
                  <span class='bold'>{{World.user_team.school_name}}</span> 
                </div>
                <div class=" font14">
                  <span>{{World.user_team.team_name}}</span>
                </div>
                <div class="font10">
                  {{World.user_team.team_record}}
                </div>
              </div>
            </td>
            <td>
              <div class="bold font14">
                {{World.current_season}}
              </div>
              <div class="font10">
                {{World.current_week}}
              </div>
            </td>
            <td>
              <div class=" font14">
                {{World.date_created|toLocaleDateString}}
              </div>
              <div class="font10">
                {{World.date_created|toLocaleTimeString}}
              </div>
            </td>            <td>
              <div class=" font14">
                {{World.date_last_updated|toLocaleDateString}}
              </div>
              <div class="font10">
                {{World.date_last_updated|toLocaleTimeString}}
              </div>
            </td>
            <td>
              <div class="btn default-coloring width100" style='border-radius: 5px;'>
                <a class='no-link-link' href="/World/{{World.world_id}}">Continue</a>
              </div>
            </td>
            <td>
              <div id='headfootballcoach{{World.world_id}}' class="btn default-coloring width100 idb-export" style='border-radius: 5px;'>
                Export
              </div>
            </td>
          </tr>
          {% endfor %}
          <tr>
            <td colspan='6'>Create new game!</td>
            <td colspan='2'>
              <div id='create-world-row' class="btn default-coloring width100" style='border-radius: 5px;'  data-bs-toggle="modal" data-bs-target="#indexCreateWorldModal">
                New Game
              </div>
            </td>
          </tr>
          <tr>
            <td colspan='6'>Delete existing leagues</td>
            <td colspan='2'>
              <div id='truncate-world-row' class="btn w3-red width100" style='border-radius: 5px;'>
                DELETE ALL
              </div>
            </td>
          </tr>      
        </tbody>
      </table>
    </div>

  </div>
</div>

<div class="modal fade" id="indexCreateWorldModal" tabindex="-1" aria-labelledby="indexCreateWorldModalLabel" aria-hidden="true">
  <div class="modal-dialog" style='width: 65%;'>
    <div class="modal-content">
      <div class="card-header default-coloring" style='font-size: 12.5px; padding: 8px 16px; border-top: 4px solid #333333; font-weight: bold;'>
        <span class="modal-title" id="indexCreateWorldModalLabel">Create new college football world</span>
      </div>
      <div class="modal-body">
        <table class='table'>
        {% for option in world_options %}
        <tr class=''>
          <td>
          <div class='bold'>{{option.display}}</div>
          <div>{{option.description}}</div>
          </td>
          <td>
            <button class='btn default-coloring create-world-play-button' database-suffix="{{option.database_suffix}}">Play!</button>
          </td>
        </tr>
        {% endfor %}
        </table>
      </div>
      {# <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div> #}
    </div>
  </div>
</div>


<div id="indexChooseTeamModal" class="w3-modal">
  <div class="w3-modal-content">
    <header class="w3-container w3-blue-grey">
      <span onclick="document.getElementById('id01').style.display='none'"
      class="btn w3-display-topright">&times;</span>
      <h2>New Head Coaching Dynasty - Choose your team!</h2>
    </header>
    <div class="w3-container">
      <span id='indexChooseTeamModalCloseButton'
      class="btn w3-display-topright">&times;</span>
      <div class="" id='indexChooseTeamModalTeamList'>
        Team List
      </div>
      <button type="button" name="button" class='btn'  id='indexChooseTeamModalContinueButton' >
          Continue
      </button>
    </div>
  </div>
</div>

<div class="CloneContainer hidden">
  <div class="indexChooseTeamModalTeamListTeamDiv hidden" id='indexChooseTeamModalTeamListTeamDivClone'>
    <img class="indexChooseTeamModalTeamListTeamLogo" src=""/>
    <span class="indexChooseTeamModalTeamListTeamName"></span>
  </div>

</div>
