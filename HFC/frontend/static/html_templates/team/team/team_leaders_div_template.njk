{% if team_leaders|length > 0%}

  <div class="card margin-bottom-24">
    <div class="w3-bar team-primary-background-bar">
        Team Leaders
      </div>

    <table class="table table-striped table-hover ">
      {% for team_leader in team_leaders %}
        <tr class='team-secondary-table-row bold'>
          <td class=''></td>
          <td>{{team_leader.display}}</td>
        </tr>
        <tr>
          <td class="w3-col center-text padding-left-8" style='background-color:#{{page.PrimaryColor}};'>
            {{team_leader|log}}
            <div class="PlayerFace-60 PlayerFace-Headshot inline-block" player_id='{{team_leader.player_team_season.player_id}}' style='border-color:#{{page.SecondaryColor}}; background-color:white;' id="teamTeamLeaderBoxPlayerFace{{loop.index}}"  ></div>
          </td>
          <td>
            <ul class='no-list-style'>
              <li>
                <span class='bold'>
                  <a href="{{team_leader.player_team_season.player.player_href}}">{{team_leader.player_team_season.player.full_name}}</a>
                </span>
                <span class='teamScheduleGameDashboardGameDisplayBoxScorePlayerPosition'>{{team_leader.player_team_season.position}}</span>
              </li>
              <li>
                {%for stat in team_leader.player_team_season.top_stats%}
                  {%if loop.index > 1%}, {%endif%}
                    <span class=''>{{stat.display}}</span>{%endfor%}
                  </li>
                </ul>
              </td>
            </tr>

          {% endfor %}
        </table>
      </div>
    {% endif %}