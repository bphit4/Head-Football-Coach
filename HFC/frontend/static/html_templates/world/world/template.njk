<div class='ext_nav_bar'>
  {% include "../../static/html_templates/common_templates/ext_nav_bar.njk" %}
</div>

{% include "../../static/html_templates/common_templates/ext_team_coloring.njk" %}

<body>
  <div class="PageContent">
    <div class='worldHeader w3-row background-eee'>
      {% include "../../static/html_templates/common_templates/scoreboard.njk" %}
    </div>
    <nav>
      <div class="w3-bar team-bar" id="nav-tab" style="background-color: #{{page.PrimaryColor}}; border-bottom: 3px solid #{{page.SecondaryColor}}; border-top: 3px solid #{{page.SecondaryColor}};  color: white; ">
        <button class='w3-bar-item btn tab nav-tab-button show-small'  id="nav-sidebar-tab" style="">
          <i class="fas fa-bars"></i>
        </button>
        <button class="w3-bar-item btn tab nav-tab-button selected-tab" id="nav-overview-tab" style="background-color: #{{page.SecondaryColor}};">Overview</button>
        <button class="w3-bar-item btn tab nav-tab-button w3-hide" id="nav-team-stats-tab">Team Stats</button>
        <button class="w3-bar-item btn tab nav-tab-button w3-hide" id="nav-history-tab">History</button>
      </div>
    </nav>
    <div id="nav-tabContent">
      <div class="tab-content show active" style="display:block;"  id="nav-overview">
        <div class="w3-display-container">
          <div class="w3-row-padding">
            <div class="w3-col l4 m6 s12">
              <div class="card w3-margin-bottom">
                <div class="w3-bar team-primary-background-bar">
                  <div class="">Top 25</div>
                </div>
                <table class='table table-striped'>
                  <colgroup>
                    <col span="1">
                    <col span="1">
                    <col span="1">
                  </colgroup>
                  {% for team in teams %}
                    <tr>
                      <td class="worldOverviewTop25TeamLineRank  w3-cell center-text" style='background-color:  #{{team.team_color_primary_hex}}; color: white;'>
                        <div class='Top25RankNumberw3-display-middle '>{{ team.team_season.rankings.national_rank[0] }}</div>
                        {% if team.NationalRankDelta < 0 %}
                          <div class='worldOverviewTop25TeamLineRankDelta worldOverviewTop25TeamLineRankDeltaRed'>&#8595;{{team.NationalRankDeltaAbs}}</div>
                        {% elif team.NationalRankDelta > 0 %}
                          <div class='worldOverviewTop25TeamLineRankDelta worldOverviewTop25TeamLineRankDeltaGreen'>&#8593;{{team.NationalRankDeltaAbs}}</div>
                        {% endif %}
                      </td>
                      <td style='background-color:  #{{team.team_color_primary_hex}}; color: white;' class='center-text'>
                        <a  class='' href="{{team.team_href}}">
                          <img class='logo logo-50'  loading="lazy" src='{{team.team_logo}}' alt="">
                        </a>
                      </td>
                      <td class='worldOverviewTop25TeamLineName  w3-cell w3-cell-middle'>
                        <ul class='no-list-style'>
                          <li>
                            <a  class='font14' href="/World/{{world_id}}/Team/{{ team.team_id }}/">
                              <span>{{ team.school_name }}
                                <span class='hide-small'>{{ team.team_name }}</span></span>
                            </a>
                          </li>
                          {% if team.team_season.results.national_champion %}
                            <li class='font10 bold opacity-1' style='color: darkgoldenrod;'>National Champions</li>
                          {% endif %}
                          {% if team.team_season.results.conference_champion %}
                            <li class='font10 bold opacity-1'>
                              <a href='{{team.team_season.conference_season.conference.conference_href}}'>{{team.team_season.conference_season.conference.conference_abbreviation}}
                              </a>
                          Champions
                        </li>
                          {% else %}
                            <li class='font10'>
                              {{team.team_season.rankings.division_rank[0]|ordinal}} in 
                          <a href='{{team.team_season.conference_season.conference.conference_href}}'>
                                {{team.team_season.conference_season.conference.conference_abbreviation}}
                              </a>
                              {% if team.team_season.division_name != 'All'%}
                                {{team.team_season.division_name}}
                              {%endif %}
                            </li>
                          {% endif %}
                        </ul>
                      </td>
                      <td>
                        <img class='logo logo-50 w3-hide {{team.AdditionalDisplayLogoClass}}' src='{{team.AdditionalDisplayLogo}}' alt="">
                        <img class='logo logo-50  w3-hide {{team.AdditionalDisplayLogo2Class}}' src='{{team.AdditionalDisplayLogo2}}' alt="">
                      </td>
                      <td class='worldOverviewTop25TeamLineRecord w3-cell  center-text'>
                        <span class=''>{{team.team_season.record.wins}} - {{team.team_season.record.losses}}</span>
                      </td>
                    </tr>
                  {% endfor %}
                </table>
              </div>
            </div>
            <div class="w3-col  l4 m6 s12">
              {% if this_week_games | length > 0 %}
                <div class="card background-eee">
                  <div class="w3-bar team-primary-background-bar">
                    <div class='w3-bar-item  margin-right-12 no-padding'>Games This Week</div>
                    <button GameFilterSelection="primetimegame" class="no-hover w3-bar-item margin-right-12 btn team-color-button tab no-padding selected-bar-button upcoming-gameview-tab" id="upcoming-gameview-nationalgame-tab" >Primetime</button>
                    <button GameFilterSelection="top25game" class="no-hover w3-bar-item margin-right-12 btn team-color-button tab no-padding upcoming-gameview-tab" id="upcoming-gameview-top25game-tab">Top 25</button>
                    <button GameFilterSelection="allgame" class="no-hover w3-bar-item margin-right-12 btn team-color-button tab no-padding upcoming-gameview-tab" id="upcoming-gameview-allgame-tab">All</button>
                  </div>
                  <div class="" style='max-height: 1675px; overflow-y: scroll;'>
                    {% for game in this_week_games%}
                      <table BoxScoreGameID="{{game.game_id}}" {{game.world_page_filter_attributes}} class="bottom-border width100 worldUpcomingTable {{game.classes}}">
                        <colgroup>
                          <col span="2">
                          <col span="2">
                          <col span="2">
                          <col span="2">
                          <col span="2">
                        </colgroup>
                        <thead>
                          <th class="bottom-border left-text hide-small" colspan="2">
                            <span class='font10 padBottom20 margin-8'>
                              <a href="{{game.game_href}}">Preview</a>
                            </span>
                          </th>
                          <th class="bottom-border left-text" colspan="4">
                            <span class='font10'>{{game.game_headline_display}}</span>
                          </th>
                          <th class="bottom-border hide-medium right-text" colspan="4">
                            <span class='font10 pb-3 me-2'>{{game.game_time}}</span>
                          </th>
                        </thead>
                        {% for team_game in game.team_games %}
                          <tr class=" w3-margin" style='border-bottom: 1px solid #ddd;'>
                            <td class='center-text hide-small' colspan='2' style='background-color: #{{team_game.team_season.team.team_color_primary_hex}}; width: 1%;'>
                              <img class="logo logo-30"  loading="lazy" src="{{team_game.team_season.team.team_logo}}" alt="">
                            </td>
                            <td class='worldUpcomingGameCell padding-left-8' colspan='4'>
                              <div class='margin0'>
                                <span class='font10'>{{team_game.team_season.national_rank_display}}</span>
                                <a href="{{team_game.team_season.team.team_href}}" class='font16'>{{team_game.team_season.team.school_name}}</a>
                              </div>
                              <div class="">
                                <span class='font10'>({{team_game.team_season.record_display}})</span>
                              </div>
                            </td>
                            <td class='center-text hide-medium' colspan='2'>
                              <h2 class='font16'>{{team_game.team_season.rankings.stat_rankings.offense[0]}}</h2>
                              <div class="">
                                <span class='font8 margin-right-4 '>Off Rank</span>
                              </div>
                            </td>
                            <td class='center-text hide-medium' colspan='2'>
                              <h2 class='font16'>{{team_game.team_season.rankings.stat_rankings.defense[0]}}</h2>
                              <div class="">
                                <span class='font8 margin-right-4 '>Def Rank</span>
                              </div>
                            </td>
                          </tr>
                        {% endfor %}
                      </table>
                    {% endfor %}
                  </div>
                </div>
              {% elif current_week.week_name == 'Season Recap' %}
                <div class="card mb-3">
                  <div class="w3-bar team-primary-background-bar">
                    <span class="">Conference Winners</span>
                  </div>
                  <div>
                    <table class='table' id=''>
                      <tbody>
                        {% for conference_season in season_recap.conference_seasons%}
                        {{conference_season|log}}
                          <tr playerid='{{player_team_season.player.player_id}}'>
                            <td rowspan='3' class='center-text' style="background-color: #{{conference_season.conference.conference_color_primary_hex}}">
                              <a href="{{conference_season.conference.conference_href}}">
                                <img src="{{conference_season.conference.conference_logo}}" class='logo logo-50' alt="">
                              </a>
                            </td>
                            <td colspan='3' class='white-text' style='background-color: #{{conference_season.conference.conference_color_primary_hex}}'>
                              <div>
                                <span class='bold'>
                                  <a href='{{conference_season.conference.conference_href}}'>
                                    {{conference_season.conference.conference_name}}
                                  </a>
                                </span>
                              </div>
                            </td>

                            </tr>
                            <tr>
                              <td class='center-text' style='background-color: #{{conference_season.team_season.team.team_color_primary_hex}};'>
                                <a  href='{{conference_season.team_season.team.team_href}}'>
                                <img class='logo logo-30' src='{{conference_season.team_season.team.team_logo}}'/>
                                </a>
                              </td>
                              <td colspan='1'>
                                <div>
                                  <a href='{{conference_season.team_season.team.team_href}}'>
                                  {{conference_season.team_season.team.full_name}}
                                  </a>
                                </div>
                                <div class='font10'>
                                  <span class=''>{{conference_season.conference.conference_abbreviation}}</span>
                                  Champions
                                </div>
                              </td>
                              <td>
                                <div>
                                  {{conference_season.team_season.record_display}}
                                </div>
                                {% if conference_season.team_season.results.national_champion%}
                                 <div class='font10 opacity-1' style='color: darkgoldenrod;'>
                                  National Champions
                                </div>
                                {%else%}
                                 <div class='font10'>
                                  {{conference_season.team_season.results.bowl.bowl_name}}
                                </div>
                                {%endif%}
                              </td>
                            </tr>
                            <tr>
                              <td  class='center-text' style="background-color: #{{conference_season.poty_award.player_team_season.team_season.team.team_color_primary_hex}}">
                                <div style='display: flex;'>
                              <div class='inline-block'>
                                <a href="{{conference_season.poty_award.player_team_season.team_season.team.team_href}}">
                                  <img src="{{conference_season.poty_award.player_team_season.team_season.team.team_logo}}" class='logo logo-30' alt="">
                                </a>
                              </div>
                              <div id='heisman-face-{{loop.index}}-{{conference_season.poty_award.player_team_season.player_id}}' player_id='{{conference_season.poty_award.player_team_season.player_id}}'  class='PlayerFace-30 PlayerFace-Headshot inline-block' style='background-color: rgba(255,255,255,0); border-color: #{{season_recap.heisman_player_team_season.team_season.team.team_color_secondary_hex}}; margin-left: -15px;'></div>
                              </div>
                              </td>
                              <td playerid = '{{conference_season.poty_award.player_team_season.player_id}}'>
                                <div class="">
                                  <a href="{{conference_season.poty_award.player_team_season.player.player_href}}">
                                    {{conference_season.poty_award.player_team_season.player.full_name}}
                                  </a>
                                </div>
                                  <div class='font10'>
                                    <span class=''>{{conference_season.conference.conference_abbreviation}}</span>
                                    Player of the year
                                </div>
                                <div class="font10">
                                  <i class="fa fa-address-card player-profile-popup-icon"></i>
                              &#183;
                              <span>{{conference_season.poty_award.player_team_season.position}}</span>
                              &#183;
                              <span>{{conference_season.poty_award.player_team_season.class.class_name}}</span>
                                </div>
                              </td>
                              <td>
                                <ul class='no-list-style' style='font-size: 10px; padding:0px;'>
                                  {% for stat in conference_season.poty_award.player_team_season.top_stats.slice(0,3)%}
                                    <li>{{stat.display}}</li>
                                  {% endfor %}
                                </ul>
                              </td>
                            </tr>
                          {% endfor %}
                        </tbody>
                      </table>
                    </div>
                  </div>
                  <div class="card margin-bottom-12">
                  <div class="w3-bar team-primary-background-bar">
                    <span class="">Heisman Winner</span>
                  </div>
                  <div>
                    <table class='table table-striped table-hover' id='heisman-winner-table'>
                      <tbody>
                          <tr player_id='{{season_recap.heisman_award.player_team_season.player_id}}'>
                            <td  class='center-text' style="background-color: #{{season_recap.heisman_award.player_team_season.team_season.team.team_color_primary_hex}}">
                              <a href="{{season_recap.heisman_award.player_team_season.team_season.team.team_href}}">
                                <img src="{{season_recap.heisman_award.player_team_season.team_season.team.team_logo}}" class='logo logo-50' alt="">
                              </a>
                            </td>
                            <td class='column-shrink center-text' style="background-color: #{{season_recap.heisman_award.player_team_season.team_season.team.team_color_primary_hex}}">
                              <div id='heisman-face-{{loop.index}}-{{season_recap.heisman_award.player_team_season.player_id}}' player_id='{{season_recap.heisman_award.player_team_season.player_id}}'  class='PlayerFace-45 PlayerFace-Headshot' style='background-color: white; border-color: #{{season_recap.heisman_player_team_season.team_season.team.team_color_secondary_hex}}'></div>
                            </td>
                            <td>
                              <div class="font16">
                                <a href="{{season_recap.heisman_award.player_team_season.player.player_href}}">
                                  {{season_recap.heisman_award.player_team_season.player.full_name}}
                                </a>
                              </div>
                              <div class="font10">
                                <a href="{{season_recap.heisman_award.player_team_season.team_season.team.team_href}}">
                                  {{season_recap.heisman_award.player_team_season.team_season.team.full_name}}
                                </a>
                              </div>
                              <div class="font10">
                                <i class="fa fa-address-card player-profile-popup-icon"></i>
                            &#183;
                            <span>{{season_recap.heisman_award.player_team_season.position}}</span>
                            &#183;
                            <span>{{season_recap.heisman_award.player_team_season.class.class_name}}</span>
                              </div>
                            </td>
                            <td>
                              <ul class='no-list-style' style='font-size: 10px; padding:0px;'>
                                {% for stat in season_recap.heisman_award.player_team_season.top_stats%}
                                  <li>{{stat.display}}</li>
                                {% endfor %}
                              </ul>
                            </td>
                          </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              {% elif current_week.week_name == 'Pre-Season' %}
                <div class="card margin-bottom-12">
                  <div class="w3-bar team-primary-background-bar">
                    <span class="">Heisman Hopefuls</span>
                  </div>
                  <div>
                    <table class='table table-striped table-hover' id='HeismanRaceTable'>
                      <tbody>
                        {% for player_team_season in preseason_info.heisman_hopefuls%}
                          <tr player_id='{{player_team_season.player_id}}'>
                            <td  class='center-text' style="background-color: #{{player_team_season.team_season.team.team_color_primary_hex}}">
                              <a href="{{player_team_season.team_season.team.team_href}}">
                                <img src="{{player_team_season.team_season.team.team_logo}}" class='logo logo-50' alt="">
                              </a>
                            </td>
                            <td class='column-shrink center-text' style="background-color: #{{player_team_season.team_season.team.team_color_primary_hex}}">
                              <div id='heisman-face-{{loop.index}}-{{player_team_season.player_id}}' player_id='{{player_team_season.player_id}}'  class='PlayerFace-45 PlayerFace-Headshot' style='background-color: white; border-color: #{{player_team_season.team_season.team.team_color_secondary_hex}}'></div>
                            </td>
                            <td>
                              <div class="font16">
                                <a href="{{player_team_season.player.player_href}}">
                                  {{player_team_season.player.full_name}}
                                </a>
                              </div>
                              <div class="font10">
                                <a href="{{player_team_season.team_season.team.team_href}}">
                                  {{player_team_season.team_season.team.full_name}}
                                </a>
                              </div>
                              <div class="font10">
                                <i class="fa fa-address-card player-profile-popup-icon"></i>
                            &#183;
                            <span>{{player_team_season.position}}</span>
                            &#183;
                            <span>{{player_team_season.class.class_name}}</span>
                              </div>
                            </td>
                            <td>
                              <ul class='no-list-style'>
                                {% for stat in player_team_season.top_stats%}
                                  <li>{{stat.display}}</li>
                                {% endfor %}
                              </ul>
                            </td>
                          </tr>
                        {% endfor %}
                      </tbody>
                    </table>
                  </div>
                </div>
                <div class="card">
                  <div class="w3-bar team-primary-background-bar">
                    <span class="">Conference Favorites</span>
                  </div>
                  <div>
                    <table class='table table-striped table-hover' id=''>
                      <tbody>
                        {% for conference_season in preseason_info.conference_favorites%}
                          <tr playerid='{{player_team_season.player.player_id}}'>
                            <td class='center-text' style="background-color: #{{conference_season.conference.conference_color_primary_hex}}">
                              <a href="{{conference_season.conference.conference_href}}">
                                <img src="{{conference_season.conference.conference_logo}}" class='logo logo-50' alt="">
                              </a>
                            </td>
                            <td>
                              <div>
                                <span class=''>{{conference_season.conference.conference_abbreviation}}</span>
                             Favorites
                          </div>
                              {% for team_season in conference_season.team_seasons.slice(0,3)%}
                                <div class="{%if loop.index==1%}{%else%}font10{%endif%}">
                                  {{loop.index}}
                                  <a href="{{team_season.team.team_href}}">
                                    {{team_season.team.full_name}}
                                  </a>
                                </div>
                                {%endfor%}
                              </td>
                            </tr>
                          {% endfor %}
                        </tbody>
                      </table>
                    </div>
                  </div>
                {% elif CurrentWeek.PhaseID.PhaseName == 'Season Recap' %}
                  <div class="card">
                    <div class="w3-bar team-primary-background-bar">
                      <div class="">{{CurrentWeek.PhaseID.LeagueSeasonID.SeasonStartYear}} All-Americans</div>
                    </div>
                    <div class="w3-bar season-allamerican-team-bar" id="nav-tab-season-allamerican-team">

                      <button TeamSelection='First Team' class="w3-bar-item award-team-tab btn team-color-button tab selected-season-award-team-tab" id="season-allamerican-team-firstteam-tab">1st Team</button>
                      <button TeamSelection='Second Team' class="w3-bar-item award-team-tab btn team-color-button tab" id="season-allamerican-team-secondteam-tab">2nd Team</button>
                      <button TeamSelection='Freshman Team' class="w3-bar-item award-team-tab btn team-color-button tab" id="season-allamerican-team-freshman-tab">Freshmen</button>
                    </div>
                    <div class="w3-bar season-allamerican-conference-bar w3-margin-bottom" id="nav-tab-season-allamerican-conference">
                      {% for Conf in SeasonAllAmericans%}
                        <button ConferenceSelection="{{Conf.Conference.ConferenceID}}" class="w3-bar-item award-conference-tab btn team-color-button tab {{Conf.ConferenceSelected}}" id="season-allamerican-conference-{{Conf.Conference.ConferenceID}}-tab">{{Conf.Conference.ConferenceAbbreviation}}</button>
                      {% endfor %}
                    </div>
                    <div class="list-group list-group-flush">
                      <table id='teamOverviewConferenceStandings' class=' table table-striped table-hover '>
                        <thead class=''>
                          <th>Pos</th>
                          <th>Team</th>
                          <th>Player</th>
                        </thead>
                        {% for Conf in SeasonAllAmericans%}
                          {% for AwardTeam in Conf.Teams %}
                            {% for Award in AwardTeam.Team %}
                              <tr class='{{Conf.ShowConference}} {{AwardTeam.ShowTeam}} season-allamarican-row season-allamerican-conference-{{Conf.Conference.ConferenceID}} season-allamerican-team-{{AwardTeam.TeamName}}'>
                                <td>{{Award.PositionID.PositionAbbreviation}}</td>
                                <td>
                                  <a href="/World/{{page.WorldID}}/Team/{{ Award.PlayerTeamSeasonID.TeamSeasonID.TeamID.TeamID }}/">
                                    <img class='logo logo-30'  loading="lazy" src="{{Award.PlayerTeamSeasonID.TeamSeasonID.TeamID.TeamLogoURL_50}}"/>
                                    {{Award.PlayerTeamSeasonID.TeamSeasonID.TeamID.TeamName }}
                                  </a>
                                </td>
                                <td>
                                  <a href="/World/{{page.WorldID}}/Player/{{ Award.PlayerTeamSeasonID.PlayerID_id }}/">{{Award.PlayerTeamSeasonID.PlayerID.FullName}}</a>, {{Award.PlayerTeamSeasonID.ClassID.ClassAbbreviation}}</td>
                              </tr>
                            {% endfor %}
                          {% endfor %}
                        {% endfor %}
                      </table>
                    </div>
                  </div>

                {% endif %}
              </div>
              <div class='w3-col l3 m6 s12'>
                <div class="card w3-margin-bottom">
                  <div class="w3-bar team-primary-background-bar">
                    <div class="">Headlines</div>
                  </div>
                  <table class='table table-striped'>
                    {% for headline_type, headlines in headlines_by_headline_type%}
                      <tr class='team-secondary-table-row'>
                        <td colspan='1'>
                    {{headline_type}}
                    </td>
                      </tr>
                      {% for headline in headlines.slice(0, 5) %}
                      {{headline|log}}

                        <tr>    
                          {# {% if headline.team_seasons|length > 1%}
                          <td style='background: linear-gradient(45deg, #{{headline.team_seasons[0].team.team_color_primary_hex}}, #{{headline.team_seasons[1].team.team_color_primary_hex}});'>
                            <img class='logo logo-18' src='{{headline.team_seasons[1].team.team_logo}}' />
                            <img class='logo logo-18' src='{{headline.team_seasons[0].team.team_logo}}' />
                          </td>
                          {%else%}
                          <td style='background-color: #{{headline.team_seasons[0].team.team_color_primary_hex}};'>
                            <img class='logo logo-24' src='{{headline.team_seasons[0].team.team_logo}}' />
                          </td>
                          {%endif%} #}
                          <td>
                            <a href='{{headline.href}}'>
                              {{headline.headline_text}}
                            </a>
                          </td>
                        </tr>
                      {% endfor %}
                    {% endfor %}

                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </body>