            <div class="w3-col  l4 m6 s12">
              {% if  this_week_games|length > 0 %}
              <div class="card background-eee">
                <div class="w3-bar team-primary-background-bar">
                  <div class='w3-bar-item  margin-right-12 no-padding'>Games This Week</div>
                  <button GameFilterSelection="primetimegame" class="no-hover w3-bar-item margin-right-12 btn team-color-button tab no-padding selected-bar-button upcoming-gameview-tab" id="upcoming-gameview-nationalgame-tab" >Primetime</button>
                  <button GameFilterSelection="top25game" class="no-hover w3-bar-item margin-right-12 btn team-color-button tab no-padding upcoming-gameview-tab" id="upcoming-gameview-top25game-tab">Top 25</button>
                  <button GameFilterSelection="allgame" class="no-hover w3-bar-item margin-right-12 btn team-color-button tab no-padding upcoming-gameview-tab" id="upcoming-gameview-allgame-tab">All</button>
                </div>
                <div class="" style='max-height: 1675px; overflow-y: scroll;'>
                  {% for game in this_week_games%}
                  <table BoxScoreGameID="{{game.game_id}}" {{game.world_page_filter_attributes}} class="bottom-border width100 worldUpcomingTable {{game.classes}}">
                    <colgroup>
                        <col span="2">
                        <col span="2">
                        <col span="2">
                        <col span="2">
                        <col span="2">
                    </colgroup>
                    <thead>
                      <th class="bottom-border left-text hide-small" colspan="2">
                        <span class='font10 padBottom20 margin-8'><a href="{{game.game_href}}">Preview</a></span>
                      </th>
                      <th class="bottom-border left-text" colspan="4">
                        <span class='font10'>{{game.game_headline_display}}</span>
                      </th>
                      <th class="bottom-border hide-medium right-text" colspan="4">
                        <span class='font10 padBottom20'>{{game.game_time}}</span>
                      </th>
                    </thead>
                    {% for team_game in game.team_games %}
                    <tr class=" w3-margin" style='border-bottom: 1px solid #ddd;'>
                      <td class='center-text hide-small' colspan='2' style='background-color: #{{team_game.team_season.team.team_color_primary_hex}}; width: 1%;'>
                          <img class="logo logo-30"  loading="lazy" src="{{team_game.team_season.team.team_logo}}" alt="">
                      </td>
                      <td class='worldUpcomingGameCell padding-left-8' colspan='4'>
                        <div class='margin0'><span class='font10'>{{team_game.team_season.national_rank_display}}</span> <a href="{{team_game.team_season.team.team_href}}" class='font16'>{{team_game.team_season.team.school_name}}</a></div>
                        <div class="">
                          <span class='font10'>({{team_game.team_season.record_display}})</span>
                        </div>
                      </td>
                      <td class='center-text hide-medium' colspan='2'>
                        <h2 class='font16'>{{team_game.team_season.rankings.stat_rankings.offense[0]}}</h2>
                        <div class="">
                          <span class='font8 margin-right-4 '>Off Rank</span>
                        </div>
                      </td>
                      <td class='center-text hide-medium' colspan='2'>
                        <h2 class='font16'>{{team_game.team_season.rankings.stat_rankings.defense[0]}}</h2>
                        <div class="">
                          <span class='font8 margin-right-4 '>Def Rank</span>
                        </div>
                      </td>
                    </tr>
                    {% endfor %}
                    </table>
                  {% endfor %}
                </div>
              </div>
              {% elif current_week.week_name == 'Pre-Season' %}
              <div class="card margin-bottom-12">
                <div class="w3-bar team-primary-background-bar">
                  <span class="">Heisman Hopefuls</span>
                </div>
                <div>
                  <table class='table table-striped table-hover' id='HeismanRaceTable'>
                    <tbody>
                      {% for player_team_season in preseason_info.heisman_hopefuls%}
                      <tr player_id='{{player_team_season.player_id}}'>
                        <td  class='center-text' style="background-color: #{{player_team_season.team_season.team.team_color_primary_hex}}">
                          <a href="{{player_team_season.team_season.team.team_href}}">
                            <img src="{{player_team_season.team_season.team.team_logo}}" class='logo logo-50' alt="">
                          </a>
                        </td>
                        <td class='column-shrink center-text' style="background-color: #{{player_team_season.team_season.team.team_color_primary_hex}}">
                          <div id='heisman-face-{{loop.index}}-{{player_team_season.player_id}}' player_id='{{player_team_season.player_id}}'  class='PlayerFace-45 PlayerFace-Headshot' style='background-color: white; border-color: #{{player_team_season.team_season.team.team_color_secondary_hex}}'>
                          </div>
                        </td>
                        <td>
                          <div class="font16">
                            <a href="{{player_team_season.player.player_href}}">
                              {{player_team_season.player.full_name}}
                            </a>
                          </div>
                          <div class="font10">
                            <a href="{{player_team_season.team_season.team.team_href}}">
                              {{player_team_season.team_season.team.full_name}}
                            </a>
                          </div>
                          <div class="font10">
                            <i class="fa fa-address-card player-profile-popup-icon"></i>
                            &#183;
                            <span>{{player_team_season.position}}</span>
                            &#183;
                            <span>{{player_team_season.class.class_name}}</span>
                          </div>
                        </td>
                        <td>
                            <ul class='no-list-style'>
                              {% for stat in player_team_season.top_stats%}
                              <li>{{stat.display}}</li>
                              {% endfor %}
                            </ul>
                        </td>
                      </tr>
                      {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
              <div class="card">
                <div class="w3-bar team-primary-background-bar">
                  <span class="">Conference Favorites</span>
                </div>
                <div>
                  <table class='table table-striped table-hover' id=''>
                    <tbody>
                      {% for conference_season in preseason_info.conference_favorites%}
                      <tr playerid='{{player_team_season.player.player_id}}'>
                        <td class='center-text' style="background-color: #{{conference_season.conference.conference_color_primary_hex}}">
                          <a href="{{conference_season.conference.conference_href}}">
                            <img src="{{conference_season.conference.conference_logo}}" class='logo logo-50' alt="">
                          </a>
                        </td>
                        <td>
                          <div>
                            <span class=''>{{conference_season.conference.conference_abbreviation}}</span>
                             Favorites
                          </div>
                          {% for team_season in conference_season.team_seasons.slice(0,3)%}
                          <div class="{%if loop.index==1%}{%else%}font10{%endif%}">
                            {{loop.index}}
                            <a href="{{team_season.team.team_href}}">
                              {{team_season.team.full_name}}
                            </a>
                          </div>
                          {%endfor%}
                        </td>
                      </tr>
                      {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
              {% elif CurrentWeek.PhaseID.PhaseName == 'Season Recap' %}
              <div class="card">
                <div class="w3-bar team-primary-background-bar">
                  <div class="">{{CurrentWeek.PhaseID.LeagueSeasonID.SeasonStartYear}} All-Americans</div>
                </div>
                <div class="w3-bar season-allamerican-team-bar" id="nav-tab-season-allamerican-team">

                  <button TeamSelection='First Team' class="w3-bar-item award-team-tab btn team-color-button tab selected-season-award-team-tab" id="season-allamerican-team-firstteam-tab">1st Team</button>
                  <button TeamSelection='Second Team' class="w3-bar-item award-team-tab btn team-color-button tab" id="season-allamerican-team-secondteam-tab">2nd Team</button>
                  <button TeamSelection='Freshman Team' class="w3-bar-item award-team-tab btn team-color-button tab" id="season-allamerican-team-freshman-tab">Freshmen</button>
                </div>
                <div class="w3-bar season-allamerican-conference-bar w3-margin-bottom" id="nav-tab-season-allamerican-conference">
                  {% for Conf in SeasonAllAmericans%}
                  <button ConferenceSelection="{{Conf.Conference.ConferenceID}}" class="w3-bar-item award-conference-tab btn team-color-button tab {{Conf.ConferenceSelected}}" id="season-allamerican-conference-{{Conf.Conference.ConferenceID}}-tab">{{Conf.Conference.ConferenceAbbreviation}}</button>
                  {% endfor %}
                </div>
                <div class="list-group list-group-flush">
                  <table id='teamOverviewConferenceStandings' class=' table table-striped table-hover '>
                    <thead class=''>
                      <th>Pos</th>
                      <th>Team</th>
                      <th>Player</th>
                    </thead>
                    {% for Conf in SeasonAllAmericans%}
                    {% for AwardTeam in Conf.Teams %}
                    {% for Award in AwardTeam.Team %}
                    <tr class='{{Conf.ShowConference}} {{AwardTeam.ShowTeam}} season-allamarican-row season-allamerican-conference-{{Conf.Conference.ConferenceID}} season-allamerican-team-{{AwardTeam.TeamName}}'>
                      <td>{{Award.PositionID.PositionAbbreviation}}</td>
                      <td>
                        <a href="/World/{{page.WorldID}}/Team/{{ Award.PlayerTeamSeasonID.TeamSeasonID.TeamID.TeamID }}/">
                          <img class='logo logo-30'  loading="lazy" src="{{Award.PlayerTeamSeasonID.TeamSeasonID.TeamID.TeamLogoURL_50}}" />
                           {{Award.PlayerTeamSeasonID.TeamSeasonID.TeamID.TeamName }}
                        </a>
                      </td>
                      <td><a href="/World/{{page.WorldID}}/Player/{{ Award.PlayerTeamSeasonID.PlayerID_id }}/">{{Award.PlayerTeamSeasonID.PlayerID.FullName}}</a>, {{Award.PlayerTeamSeasonID.ClassID.ClassAbbreviation}}</td>
                    </tr>
                    {% endfor %}
                    {% endfor %}
                    {% endfor %}
                  </table>
                </div>
              </div>

              {% endif %}
            </div>
            <div class='w3-col l3 m6 s12'>
              <div class="card">
                <span class='table_title'>Headlines</span>
                <ul class='margin-right-4'>
                    {% for Headline in Headlines%}
                    <li class='left-text gray-text'>
                      <a href="{{Headline.HeadlineHref}}" class='charcoal-text font12'>{{Headline.HeadlineText}}</a>
                    </li>
                    {% endfor %}
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</body>
