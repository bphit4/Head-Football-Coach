<div class='w3-margin-bottom football-table-column-control-bar'>
  <div class="card width100 w3-light-gray" style='overflow: visible;'>
    <div class='equal-sized-item-container py-2'>
      <div class="input-group mx-2" style='flex: 3 1;'>
        <input type="text" class="form-control football-table-search-text" autocomplete="off" placeholder='Player Name'>
        <button class='btn team-color-button football-table-search-text-button'>
          <i class='fa fa-search'/>
        </button>
      </div>
      {% for filter_option_group in filter_options %}
        <div class="dropdown hierarchy-select mx-2" id="example-one" style='flex: 1 1;'>
          <button type="button" class="btn team-color-button-white left-text btn-secondary dropdown-toggle width100" field='{{filter_option_group.options[0].options[0].field or filter_option_group.options[0].field}}' data-toggle="dropdown" data-bs-auto-close="outside" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class='filter-button-count-span badge team-color-background'></span>
            <span>{{filter_option_group.display}}</span>
          </button>
          <div class="dropdown-menu " aria-labelledby="example-one-button" style='max-height: 60vh; overflow-y: scroll;'>
            <div class="hs-menu-inner football-table-filter-option-group">
              {% for filter_option in filter_option_group.options%}
                <div class="clickable dropdown-item ps-3 football-table-filter-option" filter-field="{{filter_option.field}}" filter-value="{{filter_option.display}}" {% if filter_option.options%}include-in-filter="0"{%else%}include-in-filter="1"{%endif%}>
                  <span class='football-table-filter-option-value'>{{filter_option.display}}</span>
                </div>
                {% for filter_option_2 in filter_option.options%}
                  <div class="clickable dropdown-item ps-5 football-table-filter-option" filter-field="{{filter_option_2.field}}" parent-filter-field="{{filter_option.field}}" parent-filter-value="{{filter_option.display}}" filter-value="{{filter_option_2.display}}" include-in-filter="1">
                    {% if filter_option_2.logo_url %}
                      <img class='logo logo-24' src='{{filter_option_2.logo_url}}'/>
                    {% endif %}
                    <span class='football-table-filter-option-value'>{{filter_option_2.display}}</span>
                  </div>
                {% endfor %}
              {% endfor %}
            </div>
          </div>
          {# <input class="d-none" name="example_one" readonly="readonly" aria-hidden="true" type="text"/> #}
        </div>
      {% endfor %}
      <div class="dropdown hierarchy-select mx-2" id="example-one" style='flex: 1 1;'>
        <button type="button" class="btn team-color-button-white left-text btn-secondary dropdown-toggle width100" id="example-one-button" data-toggle="dropdown" data-bs-auto-close="outside" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class='fa fa-columns'></i>
            Columns
        </button>
        <div class="dropdown-menu " aria-labelledby="example-one-button" style='max-height: 60vh; overflow-y: scroll;'>
          <div class="hs-menu-inner football-table-column-control">
            {% for column_control_group_name, column_control_group in column_controls %}
              <div class="clickable dropdown-item ps-3 football-table-column-control-option"  column_control_group="{{column_control_group_name}}" table_columnn_control_option="{{column_control_group_name}}">
                <span class='football-table-column-option-value'>{{column_control_group_name}}</span>
              </div>
              {% for table_columnn_control_option, table_columnn_control_object in column_control_group%}
                <div class="clickable dropdown-item ps-5 football-table-column-control-option {% if table_columnn_control_object.shown%}selected{%endif%}" column-field="{{table_columnn_control_object.field}}" parent_table_columnn_control_option="{{column_control_group_name}}" table_columnn_control_option="{{column_control_group_name}}.{{table_columnn_control_option}}">
                  <span class='football-table-column-option-value'>{{table_columnn_control_object.display}}</span>
                </div>
              {% endfor %}
            {% endfor %}
          </div>
        </div>
        {# <input class="d-none" name="example_one" readonly="readonly" aria-hidden="true" type="text"/> #}
      </div>
      {# <button class="btn team-color-button-white btn-sm btn-outline-secondary football-table-show-button mx-2" id='football-table-column-show-button'>
        <span class='no-wrap' style='vertical-align:middle; '>Starters</span>
      </button> #}
      {# <button class="btn team-color-button btn-sm btn-outline-secondary football-table-show-button mx-2 px-5" id='football-table-column-show-button'>
        <i class="fa fa-search" style='vertical-align:middle; '></i>
        <span class='no-wrap' style='vertical-align:middle; '>Search</span>
      </button> #}
    </div>
    <div class='equal-sized-item-container w3-row-padding space-between py-2' style='border-top: 1px solid rgba(0,0,0,0.175);'>
      <div class='badge-container w3-row-padding' style='flex: 2 1 min-content; justify-content: flex-start;'>
        <div id='filter-badge-template' class='filter-badge badge hidden clickable team-color-button-white team-color-font m-1' style='background-color: white;'>
          <span class='filter-value'></span>
          <i class='fa fa-times-circle'></i>
        </div>
      </div>
      <div class='w3-row-padding' style='flex: 0 1 auto;'>
        <div class='football-table-clear-filters badge clickable team-color-button-white team-color-font m-1' style='background-color: white; height: fit-content;'>
          <i class='fa fa-times-circle'></i>
          <span>CLEAR FILTERS</span>

        </div>
        {# <div class='badge clickable team-color-button-white team-color-font mx-1' style='background-color: white; height: fit-content;'>
          <i class='fa fa-filter'></i>
          <span>ALL FILTERS</span>
        </div> #}
      </div>
    </div>
  </div>
</div>