<style>
  .default-coloring {
    background-color: #1763B2;
    color: white;
  }
</style>

<div class="w3-row-padding ">
  <div class=" w3-col s10 w3-padding">
    <div class="card">
      <table class='table table-striped table-hover width100'>
        <thead>
          <tr class='default-coloring center-text-row' style='border-top: 0.25rem solid #333333;'>
            {% for field in fields%}
            <th>{{field}}</th>
            {%endfor%}
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for elem in elems %}
          <tr class='center-text-row'>
            {% for field in fields%}
            <td>{{elem|complex_get(field)|safe}}</td>
            {%endfor%}
            <td>
              <a href='{{db.name}}/{{table.name}}' class="btn team-color-button default-coloring width100" style='border-radius: 0.3125rem;'>
                Inspect
              </a>
            </td>
            <td>
              <div class="btn default-coloring width100 w3-red" style='border-radius: 0.3125rem;'>
                Delete
              </div>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

  </div>
</div>