<div class='ext_nav_bar'>
  {% include "../../html_templates/common_templates/ext_nav_bar.njk" %}
</div>
<style></style>


{% include "../../html_templates/common_templates/ext_team_coloring.njk" %}

<body>
  <div class="PageContent">
    <div class='worldHeader w3-row background-eee'>
      {% include "../../html_templates/common_templates/scoreboard.njk" %}
    </div>
    <nav>
      <div class="w3-bar team-bar" id="nav-tab" style="background-color: #{{page.PrimaryColor}}; border-bottom: 0.1875rem solid #{{page.SecondaryColor}}; border-top: 0.1875rem solid #{{page.SecondaryColor}};  color: white; ">
        <button class='w3-bar-item btn tab nav-tab-button show-small'  id="nav-sidebar-tab" style="">
          <i class="fas fa-bars"></i>
        </button>

        <button class="w3-bar-item btn tab nav-tab-button selected-tab " id="nav-season-records-tab" style="background-color: #{{page.SecondaryColor}};">Season Records</button>
        <button class="w3-bar-item btn tab nav-tab-button" id="nav-game-records-tab">Game Records</button>
        {% if sum_career %}
          <button class="w3-bar-item btn tab nav-tab-button" id="nav-career-records-tab">Career Records</button>
        {% endif %}
      </div>
    </nav>
    <div id="nav-tabContent">
      <div class="tab-content" style="display:block;"  id="nav-season-records" >
        {% for stat_category in [1,2,3]%}
          <div class="card margin-bottom-24 inline-block loading-card" style='width: 23.75rem; margin-left: 1.25rem;'>
            <div class='team-primary-background-bar'>
              Loading stats...
            </div>
            <table class='table table-striped table-hover '>
              <tbody class="">
                <tr >
                  <td class="moving-gradient center-text bold font20" style=' color:white;'>
                        1
                      </td>
                  <td class="">
                    <div class="inline-block">
                    </div>

                  </td>
                  <td>
                    <div class="inline-block">
                      <div class="font10">
                      </div>
                    </div>
                  </td>
                  <td class="center-text">
                    <div class="font20">
                    </div>
                    <div class="font10">
                    </div>
                  </td>
                </tr>
                <tr>
                  <th class='center-text'>Rank</th>
                  <th colspan='1'>Team</th>
                  <th>Player</th>
                  <th class='center-text'>{{stat_category.category_abbr}}</th>
                </tr>
                {% for player in range(1,5)%}
                  <tr >
                    <td class='moving-gradient center-text bold' style='color:white;'>
                      {{loop.index + 1}}
                    </td>
                    <td colspan='2' style='padding-left: 1.5rem;'>
                      <div>
                      </div>
                      
                      

                    </td>
                    <td class='center-text'></td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        {% endfor %}
      </div>
      <div class="tab-content" style="display:none;"  id="nav-game-records" >
        {% for stat_category in [1,2,3]%}
          <div class="card margin-bottom-24 inline-block loading-card" style='width: 23.75rem; margin-left: 1.25rem;'>
            <div class='team-primary-background-bar'>
              Loading stat...
            </div>
            <table class='table table-striped table-hover '>
              <tbody class="">
                <tr >
                  <td class="moving-gradient center-text bold font20" style=' color:white;'>
                        1
                      </td>
                  <td class="">
                    <div class="inline-block">
                    </div>

                  </td>
                  <td>
                    <div class="inline-block">
                      <div class="font10">
                      </div>
                    </div>
                  </td>
                  <td class="center-text">
                    <div class="font20">
                    </div>
                    <div class="font10">
                    </div>
                  </td>
                </tr>
                <tr>
                  <th class='center-text'>Rank</th>
                  <th colspan='1'>Team</th>
                  <th>Player</th>
                  <th class='center-text'>{{stat_category.category_abbr}}</th>
                </tr>
                {% for player in range(1,5)%}
                  <tr >
                    <td class='moving-gradient center-text bold' style='color:white;'>
                      {{loop.index + 1}}
                    </td>
                    <td colspan='2' style='padding-left: 1.5rem;'>
                      <div>
                      </div>
                      
                      

                    </td>
                    <td class='center-text'></td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        {% endfor %}

      </div>

      <div class="tab-content" style="display:none;"  id="nav-career-records" ></div>
    </div>
  </div>
</body>